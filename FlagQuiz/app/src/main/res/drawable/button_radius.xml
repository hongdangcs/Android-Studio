<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="50dip" android:color="#00457C" />
            <gradient android:angle="-90" android:startColor="#002B71" android:endColor="#001EBD"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="50dip" android:color="#005EFF" />
            <solid android:color="#002A93"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#061E3C" />
            <gradient android:angle="-90" android:startColor="#025100" android:endColor="#4B4100" />
        </shape>
    </item>
</selector>